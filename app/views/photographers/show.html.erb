<section class="no-padding" id="add">
  <aside class="bg-dark">
    <div class="container text-center">
      <div class="row">
        <div class='text-center'>
        <h1>Welcome to <%= @photographer.first_name%>'s Portfolio </h1>
         <br>
         <% @photographer.photos.each do |photo| %>
         <div class="container-fluid">
          <div class="row no-gutter">
            <div class="col-lg-4 col-sm-6">
              <a href="../profile/photos" class="portfolio-box">
               <%= image_tag photo.photo.url(:standard, :width => 380, :height => 600) %>
               <div class="portfolio-box-caption">
                <div class="portfolio-box-caption-content">
                  <div class="project-category text-faded">
                    <h2><%= photo.specialty %></h2>
                  </div>
                  <div class="project-name">
                    <h2><%= photo.name %></h2>
                  </div>
                </div>
              </div>
            </a>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%= link_to "book this guy", new_photographer_booking_path(@photographer) %>

