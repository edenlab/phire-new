<section class="no-padding">
  <aside class="bg-dark">
    <div class="container text-center">
      <div class="row">
        <div class='text-center'>
          <h1> Search Results for <%= @specialty%> </h1>
          <h2> <%= @photos.count %> </h2>
          <h3>Found in: <%= @location  %></h3>

          <div class= 'container padded'>
            <div class="row">

              <% @photos.each do |photo| %>
              <div class="col-xs-12 col-sm-6">
                <div class="card" style="background-image: url(<%= cl_image_path photo.photo.url %>) ">

                  <%= link_to "", photographer_path(photo.user_id), class: "card-link" %>
                  <div class="card-description">
                    <%= photo.name %>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </aside>
</section>
